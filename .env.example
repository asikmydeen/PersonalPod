# Application
NODE_ENV=development
APP_NAME=PersonalPod
APP_PORT=3000
APP_URL=https://localhost:3000
API_PREFIX=/api/v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=personalpod
DB_PASSWORD=devpassword
DB_NAME=personalpod_dev

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Elasticsearch
ELASTICSEARCH_HOST=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=personalpod_

# AWS (LocalStack for development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT=http://localhost:4566
S3_BUCKET_NAME=personalpod-dev-uploads

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this
REFRESH_TOKEN_EXPIRES_IN=30d

# Email (SES)
EMAIL_FROM=noreply@personalpod.local
EMAIL_REPLY_TO=support@personalpod.local

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Security
CORS_ORIGIN=https://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
FEATURE_REGISTRATION_ENABLED=true
FEATURE_EMAIL_VERIFICATION_REQUIRED=true
FEATURE_TWO_FACTOR_AUTH_ENABLED=true