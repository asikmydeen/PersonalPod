# Environment
NODE_ENV=development
PORT=5173

# API Configuration
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Authentication (AWS Cognito)
VITE_AUTH_DOMAIN=personalpod.auth.region.amazoncognito.com
VITE_AUTH_CLIENT_ID=your-cognito-client-id
VITE_AUTH_REDIRECT_URI=http://localhost:5173/auth/callback
VITE_AUTH_LOGOUT_URI=http://localhost:5173

# Feature Flags
VITE_ENABLE_AI_INSIGHTS=true
VITE_ENABLE_VOICE_NOTES=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SENTRY=false

# Storage
VITE_LOCAL_STORAGE_PREFIX=personalpod
VITE_INDEXED_DB_NAME=personalpod-offline
VITE_INDEXED_DB_VERSION=1

# Upload Limits
VITE_MAX_FILE_SIZE=10485760  # 10MB
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,audio/mpeg,audio/wav

# Analytics (optional)
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking (optional)
VITE_SENTRY_DSN=https://xxx@sentry.io/xxx
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACE_SAMPLE_RATE=0.1

# API Keys (optional)
VITE_MAPBOX_TOKEN=your-mapbox-token  # For location features
VITE_UNSPLASH_ACCESS_KEY=your-unsplash-key  # For mood images

# PWA Configuration
VITE_PWA_NAME=PersonalPod
VITE_PWA_SHORT_NAME=PersonalPod
VITE_PWA_THEME_COLOR=#6366f1
VITE_PWA_BACKGROUND_COLOR=#ffffff

# Development Tools
VITE_ENABLE_MOCK_API=false
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_DEVTOOLS=true